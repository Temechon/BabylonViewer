    script. (type='text/javascript')
      var errorDetails = "#{error}";
  body
    header
      p#plogo
        a#logoBV(href='#') BabylonViewer
      a#logoBJS(href='http://www.babylonjs.com')
        img(src='/images/logo_babylon.jpg')
    #contentWrapper
      table#page-table
        tr
          td#page-td
            #global
              p#intro
                | Upload a zip file containing your babylon scene and all your textures, and click on upload.
                br
                | Yes, it's that simple.
              form(method='post', action='/upload', enctype='multipart/form-data')
                table#buttons
                  tr
                    td#choosefileimg
                      input#choosefileinput(type='file', name='image')
                    td Â 
                    td#uploadimg
                      input#uploadinput(type='submit', disabled='disabled')
              p#path No file selected
    footer
      p#pfooterleft
        | Created by Julian Chenard - SOKRATE
        br
        | Design by Jean-Baptiste Bledowski - SOKRATE
      p#pfooterright
        | Babylon.js created by David Catuhe -
        a(href='http://www.babylonjs.com') http://www.babylonjs.com
    script
      if(errorDetails) {
      $('#path').text(errorDetails);
      $('#path').css("color", "red");
      }
      $('#choosefileinput').change(function(){
      $('#path').css("color", "black");
      if ($(this).val()) {
      // update the file path
      $('#path').text($(this).val());
      // update the upload image
      $('#uploadimg').css("background", "url('/images/upload_y.jpg') no-repeat");
      $('#uploadinput').removeAttr("disabled");
      } else {
      // reset the file path
      $('#path').text("No file selected");
      // reset the upload image
      $('#uploadimg').css("background", "url('/images/upload_n.jpg') no-repeat");
      $('#uploadinput').attr('disabled', 'disabled');
      }
      });
